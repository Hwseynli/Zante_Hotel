@model UpdateGalleryVM
<section>
    <div class="pcoded-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mt-5">Update Gallery</h5>
                        <hr>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <img src="~/assets/assets/images/gallery/@Model.Url"/>
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*"/>
                                    <span asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-primary">Update</button>
                            <div class="form-group col-md-6" asp-validation-summary="ModelOnly">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- [ form-element ] end -->
        </div>
        <!-- [ Main Content ] end -->

    </div>
</section>
