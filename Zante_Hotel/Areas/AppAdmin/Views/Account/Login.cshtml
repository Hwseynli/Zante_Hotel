@{
    Layout = "_LoginLayout";
}
@model LoginVM
<header>Login Form</header>
<form method="post">
    <div class="input-field">
        <input asp-for="UsernameOrEmail" required />
        <label asp-for="UsernameOrEmail">Email or Username</label>
        <span asp-validation-for="UsernameOrEmail"></span>
    </div>
    <div class="input-field">
        <input class="pswrd" asp-for="Password" required>
        <span class="show">SHOW</span>
        <label asp-for="Password">Password</label>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="button">
        <div class="inner"></div>
        <button type="submit">LOGIN</button>
    </div>
    <div asp-validation-summary="ModelOnly">
    </div>
</form>
<div class="signup">
    Not a member? <a asp-action="Registr" asp-controller="Account" asp-area="AppAdmin">Signup now</a>
</div>