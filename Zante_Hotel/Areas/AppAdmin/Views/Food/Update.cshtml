@model UpdateFoodVM
<section>
    <div class="pcoded-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mt-5">Create Food</h5>
                        <hr>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Name" value="@Model.Name"/>
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="About">About</label>
                                    <input asp-for="About" class="form-control" placeholder="About" value="@Model.About"/>
                                    <span asp-validation-for="About"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Price">Price</label>
                                    <input asp-for="Price" class="form-control" placeholder="Price" value="@Model.Price">
                                    <span asp-validation-for="Price"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <img width="70px" height="50px" src="~/assets/assets/images/foods/@Model.ImgUrl" />
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*" />
                                    <span asp-validation-for="Photo"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-primary">Create</button>
                            <div class="form-group col-md-6" asp-validation-summary="ModelOnly">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--[ form-element ] end-->
        </div>
        <!--[ Main Content ] end-->

    </div>
</section>
