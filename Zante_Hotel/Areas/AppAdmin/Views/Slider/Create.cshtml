@model CreateSliderVM
<section>
    <div class="pcoded-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mt-5">Create Slider</h5>
                        <hr>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Title"/>
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="SubTitle">SubTitle</label>
                                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle" />
                                    <span class="text-danger" asp-validation-for="SubTitle"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ButtonTitle">ButtonTitle</label>
                                    <input asp-for="ButtonTitle" class="form-control" placeholder="ButtonTitle" />
                                    <span class="text-danger" asp-validation-for="ButtonTitle"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*" />
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="VideoUrl">Video link</label>
                                    <input asp-for="VideoUrl" class="form-control" placeholder="VideoUrl" />
                                    <span class="text-danger" asp-validation-for="VideoUrl"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                            <div class="form-group col-md-6 text-danger" asp-validation-summary="ModelOnly">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--[ form-element ] end-->
        </div>
        <!--[ Main Content ] end-->
    </div>
</section>
