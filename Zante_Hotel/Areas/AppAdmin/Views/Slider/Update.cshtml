@model UpdateSliderVM
<section>
    <div class="pcoded-content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="mt-5">Update Slider</h5>
                        <hr>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Title" value="@Model.Title" />
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="SubTitle">SubTitle</label>
                                    <input asp-for="SubTitle" class="form-control" placeholder="SubTitle" value="@Model.SubTitle" />
                                    <span class="text-danger" asp-validation-for="SubTitle"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ButtonTitle">ButtonTitle</label>
                                    <input asp-for="ButtonTitle" class="form-control" placeholder="ButtonTitle" value="@Model.ButtonTitle" />
                                    <span class="text-danger" asp-validation-for="ButtonTitle"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <img width="320" height="240" src="~/assets/assets/images/slider/@Model.ImageUrl" />
                                    <label asp-for="Photo">Photo</label>
                                    <input asp-for="Photo" class="form-control" placeholder="Photo" accept="image/*" />
                                    <span class="text-danger" asp-validation-for="Photo"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <iframe width="560" height="315" src="https://preview.eagle-themes.com/html/zante/videos/hero_video.mp4" frameborder="0" allowfullscreen></iframe>
                                    <label asp-for="VideoUrl">Video link</label>
                                    <input asp-for="VideoUrl" class="form-control" placeholder="VideoUrl"  />
                                    <span class="text-danger" asp-validation-for="VideoUrl"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn  btn-primary">Update</button>
                            <div class="form-group col-md-6 text-danger" asp-validation-summary="ModelOnly">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--[ form-element ] end-->
        </div>
        <!--[ Main Content ] end-->

    </div>
</section>
