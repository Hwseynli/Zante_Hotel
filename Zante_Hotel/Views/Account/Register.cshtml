@{
    Layout="_RegisterLayout";
}
@model RegisterVM
<div class="title">Registration</div>
<div class="content">
    <form method="post" enctype="multipart/form-data">
        <div class="user-details">
            <div class="input-box">
                <span class="details">Your Photo</span>
                <input asp-for="UserPhoto" accept="image/*" />
                <span asp-validation-for="UserPhoto"></span>
            </div>
            <div class="input-box">
                <span class="details">Name</span>
                <input asp-for="Name" placeholder="Enter your name" required>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="input-box">
                <span class="details">Surname</span>
                <input asp-for="Surname" placeholder="Enter your Surname" required>
                <span asp-validation-for="Surname"></span>
            </div>
            <div class="input-box">
                <span class="details">Age</span>
                <input asp-for="Age" placeholder="Enter your Age" required>
                <span asp-validation-for="Age"></span>
            </div>
            <div class="input-box">
                <span class="details">Username</span>
                <input asp-for="Username" placeholder="Enter your Username" required>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="input-box">
                <span class="details">Email</span>
                <input asp-for="Email" placeholder="Enter your Email" required>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-box">
                <span class="details">Password</span>
                <input asp-for="Password" placeholder="Enter your Password" required>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="input-box">
                <span class="details">ConfirmPassword</span>
                <input asp-for="ConfirmPassword" placeholder="Enter your ConfirmPassword" required>
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div class="gender-details">
            <input type="radio" name="gender" id="dot-1" value="Male" />
            <input type="radio" name="gender" id="dot-2" value="Female" />
            <input type="radio" name="gender" id="dot-3" value="Other" />
            <span class="gender-title">Gender</span>
            <div class="category">
                <label for="dot-1" asp-for="Gender">
                    <span class="dot one"></span>
                    <span class="gender">Male</span>
                </label>
                <label for="dot-2" asp-for="Gender">
                    <span class="dot two"></span>
                    <span class="gender">Female</span>
                </label>
                <label for="dot-3" asp-for="Gender">
                    <span class="dot three"></span>
                    <span class="gender">Prefer not to say</span>
                </label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="button">
            <input type="submit" value="Register" />
        </div>
        <div class="signup">
            Have your account? <a asp-action="Login" asp-controller="Account" asp-area="AppAdmin">SignIn now</a>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>
    </form>
</div>