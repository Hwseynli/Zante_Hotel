@inject LayoutService service;
@{
    Hotel hotel = await service.GetHotel();
    AppUser user = await service.GetUser();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">

    <!-- ========== SEO ========== -->
    @if (hotel != null)
    {
        <title>@hotel.Name</title>
    }
    else
    {
        <title>Basliqsiz</title>

    }
    <meta content="" name="description">
    <meta content="" name="keywords">
    <meta content="" name="author">

    <!-- ========== FAVICON ========== -->
    <link rel="apple-touch-icon-precomposed" href="~/assets/assets/images/favicon-apple.png" />
    <link rel="icon" href="~/assets/assets/images/favicon.png">

    <!-- ========== STYLESHEETS ========== -->
    <link href="~/assets/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/revolution/css/layers.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/assets/revolution/css/settings.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/assets/revolution/css/navigation.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/assets/css/bootstrap-select.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/animate.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/famfamfam-flags.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/magnific-popup.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/owl.carousel.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/style.css" rel="stylesheet" type="text/css">
    <link href="~/assets/assets/css/responsive.css" rel="stylesheet" type="text/css">

    <!-- ========== ICON FONTS ========== -->
    <link href="~/assets/assets/fonts/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/assets/fonts/flaticon.css" rel="stylesheet">

    <!-- ========== GOOGLE FONTS ========== -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900%7cRaleway:400,500,600,700" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- ========== PRELOADER ========== -->
    <div id="loading">
        <div class="inner">
            <div class="loading_effect">
                <div class="object" id="object_one"></div>
                <div class="object" id="object_two"></div>
                <div class="object" id="object_three"></div>
            </div>
        </div>
    </div>

    <div class="wrapper">

        <!-- ========== HEADER ========== -->
        <header class="fixed transparent">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle mobile_menu_btn" data-toggle="collapse" data-target=".mobile_menu" aria-expanded="false">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand light" asp-action="Index" asp-controller="Home">
                        <img src="~/assets/assets/images/logo_light.svg" height="32" alt="Logo">
                    </a>
                    <a class="navbar-brand dark nodisplay" asp-action="Index" asp-controller="Home">
                        <img src="~/assets/assets/images/@hotel.Logo" height="32" alt="Logo">
                    </a>
                </div>
                <nav id="main_menu" class="mobile_menu navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="mobile_menu_title" style="display:none;">MENU</li>
                        <li class="dropdown simple_menu active">
                            <a asp-action="Index" asp-controller="Home">HOME<b class="caret"></b></a>
                        </li>
                        <li class="dropdown simple_menu">
                            <a asp-action="RoomList" asp-controller="Room">ROOMS <b class="caret"></b></a>

                        </li>
                        <li class="dropdown mega_menu mega_menu_fullwidth">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle" aria-expanded="true">PAGES <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="mega_menu_inner">
                                        <ul>
                                            <li class="list_title">PAGES</li>
                                            <li><a asp-action="Restaurant" asp-controller="Home">Restaurants</a></li>
                                            <li><a asp-action="Spa" asp-controller="Home">Spa</a></li>
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <li><a asp-action="ContactUs" asp-controller="Home">CONTACT US</a></li>
                        <li><a asp-action="Index" asp-controller="Blog">BLOGS</a></li>
                        <li class="menu_button">
                            <a asp-action="Create" asp-controller="Reservation" class="button  btn_yellow"><i class="fa fa-calendar"></i>Reservation</a>
                        </li>
                        @if (user != null && User.Identity.IsAuthenticated)
                        {

                            @if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <div class="user-area dropdown float-right">
                                        <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img class="user-avatar rounded-circle" style="vertical-align: middle; width: 40px; height: 40px; border-radius: 100%;" src="~/admin/images/user-images/@user.UserImgUrl " alt="User Avatar">
                                        </a>
                                        <div class="user-menu dropdown-menu" style="background:none">
                                            <ul>
                                                <li>
                                                    <a class="nav-link ml-2 mt-4" href="#"><i class="fa fa- user"></i>@user.UserName</a><br>
                                                </li>
                                                <li>
                                                    <a class="nav-link ml-2 mb-4" asp-action="Index" asp-controller="Home" asp-area="AppAdmin"><i class="fa fa- user"></i>Settings</a><br>
                                                </li>
                                                <li>
                                                    <a class="nav-link ml-2 mb-4" asp-action="Logout" asp-controller="Account" asp-area="AppAdmin"><i class="fa fa- user"></i>Logout</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <div class="user-area dropdown float-right">
                                        <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img class="user-avatar rounded-circle" style="vertical-align: middle; width: 40px; height: 40px; border-radius: 100%;" src="~/admin/images/user-images/@user.UserImgUrl " alt="User Avatar">
                                        </a>
                                        <div class="user-menu dropdown-menu" style="background:none">
                                            <ul>
                                                <li>
                                                    <a class="nav-link ml-2 mt-4" href="#"><i class="fa fa- user"></i>@user.UserName</a>
                                                </li>
                                                <li>
                                                    <a class="nav-link ml-2 mb-4" asp-action="Logout" asp-controller="Account" asp-area="AppAdmin"><i class="fa fa- user"></i>Logout</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }


                        }
                        else
                        {
                            <li>
                                <div class="user-area dropdown float-right">
                                    <a asp-action="Login" asp-controller="Account" asp-area="AppAdmin" asp-route-ReturnUrl="@Context.Request.Path.Value" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <img class="user-avatar rounded-circle" style="vertical-align: middle; width: 40px; height: 40px; border-radius: 100%;" src="~/admin/images/user-images/images.jpeg " alt="User Avatar">
                                    </a>
                                    <div class="user-menu dropdown-menu" style="background:none">
                                        <ul>
                                            <li>
                                                <a class="nav-link ml-2 mt-4" asp-action="Login" asp-controller="Account" asp-area="AppAdmin" asp-route-ReturnUrl="@Context.Request.Path.Value"><i class="fa fa- user"></i>Login</a>
                                            </li>
                                            <li>
                                                <a class="nav-link ml-2 mb-4" asp-action="Registr" asp-controller="Account" asp-area="AppAdmin" asp-route-ReturnUrl="@Context.Request.Path.Value"><i class="fa fa- user"></i>Registr</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </header>
        @RenderBody()
    </div>
    <!-- ========== FOOTER ========== -->
    <footer>
        <div class="inner">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-sm-6 widget">
                        <div class="about">
                            @if (hotel != null)
                            {
                                <a asp-action="Index" asp-controller="Home"><img class="logo" src="~/assets/assets/images/@hotel.Logo" height="32" alt="Logo"></a>
                                <p>@hotel.Description.Substring(0, 100)</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-6 widget">
                        <h5>Useful Links</h5>
                        <ul class="useful_links">
                            <li><a href="#">About us</a></li>
                            <li><a href="#">Contact us</a></li>
                            <li><a href="#">History</a></li>
                            <li><a href="#">Gallery</a></li>
                            <li><a href="#">Location</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 col-sm-6 widget">
                        <h5>Contact Us</h5>
                        <address>
                            @if (hotel != null)
                            {
                                <ul class="address_details">
                                    <li><i class="glyphicon glyphicon-map-marker"></i> @hotel.Address</li>
                                    <li><i class="glyphicon glyphicon-phone-alt"></i> Phone: @hotel.PhoneNumber </li>
                                    <li><i class="fa fa-fax"></i> Fax: 800 123 3456</li>
                                    <li><i class="fa fa-envelope"></i> Email: <a href="mailto:info@site.com">@hotel.Email</a></li>
                                </ul>
                            }
                        </address>
                    </div>
                </div>
            </div>
        </div>
        <div class="subfooter">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        @if (hotel != null)
                        {
                            <div class="copyrights">
                                Copyright 2017 <a asp-action="Index" asp-controller="Home">@hotel.Name</a> All Rights Reserved.
                            </div>
                        }
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <div class="social_media">
                            <a class="facebook" data-original-title="Facebook" data-toggle="tooltip" href="#"><i class="fa fa-facebook"></i></a>
                            <a class="twitter" data-original-title="Twitter" data-toggle="tooltip" href="#"><i class="fa fa-twitter"></i></a>
                            <a class="googleplus" data-original-title="Google Plus" data-toggle="tooltip" href="#"><i class="fa fa-google-plus"></i></a>
                            <a class="pinterest" data-original-title="Pinterest" data-toggle="tooltip" href="#"><i class="fa fa-pinterest"></i></a>
                            <a class="linkedin" data-original-title="Linkedin" data-toggle="tooltip" href="#"><i class="fa fa-linkedin"></i></a>
                            <a class="instagram" data-original-title="Instagram" data-toggle="tooltip" href="#"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- ========== BACK TO TOP ========== -->
    <div id="back_to_top">
        <i class="fa fa-angle-up" aria-hidden="true"></i>
    </div>

    <!-- ========== NOTIFICATION ========== -->
    <div id="notification"></div>

    <!-- ========== JAVASCRIPT ========== -->
    <script type="text/javascript" src="~/assets/assets/js/jquery.min.js"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
    <script type="text/javascript" src="~/assets/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/bootstrap-select.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/jquery.smoothState.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/moment.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/morphext.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/wow.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/jquery.easing.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/owl.carousel.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/owl.carousel.thumbs.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/jPushMenu.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/isotope.pkgd.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/imagesloaded.pkgd.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/countUp.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/jquery.countdown.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/js/main.js"></script>

    <!-- ========== REVOLUTION SLIDER ========== -->
    <script type="text/javascript" src="~/assets/assets/revolution/js/jquery.themepunch.tools.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/jquery.themepunch.revolution.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.migration.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script type="text/javascript" src="~/assets/assets/revolution/js/extensions/revolution.extension.video.min.js"></script>

</body>
</html>